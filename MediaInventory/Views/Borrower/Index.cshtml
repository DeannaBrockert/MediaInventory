@model List<Borrower>
@{ 
    ViewBag.Title = "Borrower Manager";
}
<h1>@ViewBag.Title</h1>
<a asp-controller="Borrower" asp-action="Add">Add a borrower</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Borrower ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrower in Model)
        {
        <tr>
            <td>@borrower.BorrowerId</td>
            <td>@borrower.LastName</td>
            <td>@borrower.FirstName</td>
            <td>@borrower.PhoneNumber</td>
            <td><a asp-controller="Borrower" asp-action="Edit" asp-route-id="@borrower.BorrowerId">Edit</a></td>
            <td><a asp-controller="Borrower" asp-action="Delete" asp-route-id="@borrower.BorrowerId">Delete</a></td>
        </tr>
        }
    </tbody>
</table>