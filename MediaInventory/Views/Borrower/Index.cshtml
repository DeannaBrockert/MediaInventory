@model List<Borrower>
@{ 
    ViewBag.Title = "Borrower Manager";
}
<h1>@ViewBag.Title</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrower in Model)
        {
            <tr>
                <td>@borrower.FirstName</td>
                <td>@borrower.LastName</td>
                <td>@borrower.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>