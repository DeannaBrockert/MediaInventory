@model MediaHasBorrower
@{
    string title = ViewBag.Action + " Checkout";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MediaId">Media</label>
        <select asp-for="MediaId" class="form-control">
            <option value="select a media">select a media</option>
            @foreach (Medium m in ViewBag.Media)
            {
                <option value="@m.MediaId">@m.MediaName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowerId">Borrower</label>
        <select asp-for="BorrowerId" class="form-control">
            <option value="select a borrower">select a borrower</option>
            @foreach (Borrower b in ViewBag.Borrowers)
            {
                <option value="@b.BorrowerId">@b.LastName, @b.FirstName </option>
            }
        </select>
    </div>
    <div>
        <label asp-for="BorrowDate">Borrowed Date</label>
        <input type="date" asp-for="BorrowDate" class="form-control" />
    </div>
    <div>
        <label asp-for="ReturnDate">Returned Date</label>
        <input type="date" asp-for="ReturnDate" class="form-control" />
    </div>
    <input type="hidden" asp-for="MediaHasBorrowerId" />
    <br />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="MediaHasBorrower" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
