@model Medium
@{ 
    string title = ViewBag.Action + " Media";
    ViewBag.Title = title;
} 
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MediaName">Media Name</label>
        <input asp-for="MediaName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId">Genre</label>
        <select asp-for="GenreId" class="form-control">
            <option value="Select a genre">Select a genre</option>
            @foreach (Genre g in ViewBag.Genres)
            {
                <option value="@g.GenreId">@g.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="MediaTypeId">Media Type</label>
        <select asp-for="MediaTypeId" class="form-control">
            <option value="Select a media type">Select a media type</option>
            @foreach (MediaType t in ViewBag.MediaTypes)
            {
                <option value="@t.MediaTypeId">@t.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StatusId">Status</label>
        <select asp-for="StatusId" class="form-control">
            <option value="Select a status">Select a status</option>
            @foreach (Status s in ViewBag.Statuses)
            {
                <option value="@s.StatusId">@s.Description</option>
            }
        </select>
    </div>
    <input type="hidden" asp-for="MediaId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Media" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
